// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model Form {
  id          Int   @id @default(autoincrement())
  email       String @unique
  step1Data   Json?    
  step2Data   Json?   
  isCompleted Boolean @default(false)
  currentStep Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}